@using ASM_App_Dev.Utils
@using ASM_App_Dev.ViewModels
@using Microsoft.AspNetCore.Identity

@model ApplicationUser

<h1>Change Password</h1>

 <form enctype="multipart/form-data" asp-controller="Admin" asp-action="ChangePassword" method="post">
            <div class="form-group">
                <label>New Password</label>
                <input asp-for="PasswordHash" class="form-control" placeholder="Input new password..." />
                <span asp-validation-for="@Model.PasswordHash" class="text-danger"></span>
            </div>
            
            <div class="btn-wrapper">
                <button type="submit" class="btn btn-primary">Create</button>
            </div>
 </form>