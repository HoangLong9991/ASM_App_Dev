@{
}
@model IEnumerable<Book>

<script src="https://kit.fontawesome.com/a775ea28da.js" crossorigin="anonymous"></script>

<style>
    .body-container {
        display: flex;
    }

    .side-bar {
        width: 20%;
        margin: 0 20px 0 10px;
    }

    .fa-chart-line {
        margin-right: 10px;
    }

    .fa-book {
        margin-right: 10px;
    }

    .fa-list {
        margin-right: 10px;
    }

    .fa-clipboard-user {
        margin-right: 10px;
    }

    .display-container {
        width: 80%;
    }

    .form-wrapper {
        display: flex;
        margin: 10px 0 10px 0;
    }

    #search-box{
        display:flex;
    }

    #search-input {
        width: 640px;
    }

    #btn-search {
        margin: 0 10px 0 10px;
    }

    #book-management {
        color: black;
        text-decoration: none;
    }

    #category-request {
        color: black;
        text-decoration: none;
    }
</style>

<div class="body-container">
    @if (User.IsInRole(Role.STORE_OWNER))
    {
        <div class="side-bar">
            <ul class="list-group">
                <li class="list-group-item"><i class="fa-solid fa-book"></i><a id="book-management" asp-controller="Books" asp-action="Index">Book Management</a></li>
                <li class="list-group-item"><i class="fa-solid fa-list"></i><a id="category-request" asp-controller="Categories" asp-action="Index">Category Request</a></li>
                <li class="list-group-item"><i class="fa-solid fa-clipboard-user"></i>Record Management</li>
            </ul>
        </div>

        <div class="display-container">
            <div class="form-wrapper">
                <form id="search-box" asp-controller="Books" asp-action="Index" method="get">
                    <input id="search-input" name="SearchString" class="form-control" placeholder="Enter Book You Want To Search" />
                    <input type="submit" value="Search" id="btn-search" class="btn btn-secondary" />
                </form>
                <a id="btn-create" class="btn btn-primary" asp-controller="Books" asp-action="Create">Create Book</a>
            </div>

            <table class="table">
                <thead>
                    <tr class="table-dark">
                        <th scope="col">#</th>
                        <th scope="col">Name of Book</th>
                        <th scope="col">Quantity</th>
                        <th scope="col">Price</th>
                        <th scope="col">Information</th>
                        <th scope="col">Created At</th>
                        <th scope="col">Action</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <th scope="row">@item.Id</th>
                        <td>@item.NameBook</td>
                        <td>@item.QuantityBook</td>
                        <td>@item.Price VNĐ</td>
                        <td>@item.InformationBook</td>
                        <td>@item.CreatedAt</td>
                        <td>
                            <a asp-controller="Books" asp-action="Details" asp-route-id=@item.Id class="btn btn-primary btn-sm">Details</a>
                            <a asp-controller="Books" asp-action="Edit" asp-route-id=@item.Id class="btn btn-secondary btn-sm">Edit</a>
                            <a asp-controller="Books" asp-action="Delete" asp-route-id=@item.Id class="btn btn-danger btn-sm">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    }
    else {
   <section style="background-color: #eee;">
  <div class="container py-5">
    <div class="row">
        @foreach (var item in Model){
      <div class="col-md-6 col-lg-3 mb-4 mb-md-0"  style=" margin-bottom: 10px !important">
        <div class="card" style= " border-radius: 10px !important ">
            <a asp-controller="Products" asp-action="Detail" asp-route-id=@item.Id >
                <div style=" height: 240px; align-content: center;display: grid;">
                    <img src=""
                    class="card-img-top"  style= " border-radius: 10px !important; display: block;  height: auto;" />
                </div>
            </a>
          <div class="card-body">
            <div class="d-flex justify-content-between mb-3">
              <a asp-controller="Products" asp-action="Detail" asp-route-id=@item.Id >
                <h5 class="mb-0">@item.NameBook</h5>
              </a>
            </div>
            <div>
                <span src="" class="text-dark mb-0" >Price: @item.Price VND</span>
            </div>
            <div class="d-flex justify-content-between mb-2">
              <p class="text-muted mb-0" src="">Available:<span class="fw-bold">@item.QuantityBook</span></p>
              <a  asp-controller="Orders" asp-action="Create" asp-route-id=@item.Id >Add To Cart</a>
            </div>
          </div>
        </div>
      </div>}
    </div>
  </div>
</section>
}
</div>